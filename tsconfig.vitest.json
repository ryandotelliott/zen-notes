{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/shared/components/*"],
      "@/lib/*": ["./src/shared/lib/*"],
      "@/hooks/*": ["./src/shared/hooks/*"],
      "@/providers/*": ["./src/shared/providers/*"],
      "@/features/*": ["./src/features/*"],
      "@/test/*": ["./test/*"]
    }
  },
  "exclude": ["node_modules"]
}
